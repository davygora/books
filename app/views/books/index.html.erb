<div class="row">
  <div class="col-lg-12">
      <h2 class="page-header">All books</h2>
  </div>
  <% @books.each do |book| %>
  <div class="col-lg-4 col-sm-6 text-center">
      <img class="img-circle img-responsive img-center" <%= image_tag book.cover.url %>
      <h3><%= book.title %>
          <small><%= book.author %></small>
      </h3>
      <p><%= book.summary %></p>
  </div>
  <% end %>
</div>
